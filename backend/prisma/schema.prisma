generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            String          @id @default(uuid())
  email         String          @unique
  phoneNumber   String?         @unique @db.VarChar(15)
  firstname     String?         @db.VarChar(50)
  lastname      String?         @db.VarChar(50)
  password      String?         @db.VarChar(500)
  isActive      Boolean         @default(true)
  createdAt     DateTime        @default(now())
  updatedAt     DateTime?       @updatedAt
  role          Role
  Advertisement Advertisement[]
  Resume        Resume[]
}

enum Role {
  EMPLOYER
  JOBSEEKER
  ADMIN
}

model Resume {
  id        Int      @id @default(autoincrement())
  name      String
  data      String
  createdAt DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}

model Advertisement {
  id                 Int         @id @default(autoincrement())
  title              String      @db.VarChar(255)
  companyName        String      @db.VarChar(255)
  companyWebsite     String      @db.VarChar(100)
  companyLogo        String?     @db.VarChar(1000)
  companySize        Int
  location           String      @db.VarChar(255)
  jobDescription     String      @db.VarChar(1000)
  companyDescription String      @db.VarChar(1000)
  minWorkExperience  Int
  isShared           Boolean     @default(false)
  salary             Float
  createdAt          DateTime    @default(now())
  updatedAt          DateTime?   @updatedAt
  contractId         Int
  contract           JobContract @relation(fields: [contractId], references: [id])
  categoryId         Int
  category           JobCategory @relation(fields: [categoryId], references: [id])
  userId             String
  user               User        @relation(fields: [userId], references: [id])
}

model JobCategory {
  id             Int             @id @default(autoincrement())
  title          String          @db.VarChar(255)
  Addvertisement Advertisement[]
}

model JobContract {
  id             Int             @id @default(autoincrement())
  title          String          @db.VarChar(255)
  Addvertisement Advertisement[]
}
